// This file imports the schema from the web app to ensure consistency
// The MCP server uses the same database and schema as the web app

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

